<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: rgba(var(--gray-light), 0.3);
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--text-color);
	}
	.social-links a:hover {
		color: var(--accent);
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const discordLink = document.querySelector("footer [data-discord-link]");
		if (discordLink) {
			discordLink.addEventListener("click", (e) => {
				e.preventDefault();
				alert("Kontaktiere mich auf Discord.\nUsername: functiondj");
			});
		}
	});
</script>
